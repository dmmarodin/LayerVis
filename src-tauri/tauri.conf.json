  {
    "build": {
      "distDir": "../build",
      "devPath": "http://localhost:5173",
      "beforeDevCommand": "npm run dev",
      "beforeBuildCommand": "npm run build"
    },
    "package": {
      "productName": "layervis",
      "version": "0.1.0"
    },
    "tauri": {
      "allowlist": {
        "all": false
      },
      "bundle": {
        "active": true,
        "targets": "all",
        "identifier": "com.codedepth.layervis",
        "icon": [
          "icons/32x32.png",
          "icons/128x128.png",
          "icons/128x128@2x.png",
          "icons/icon.icns",
          "icons/icon.ico"
        ]
      },
      "security": {
        "csp": null
      },
      "windows": [
        {
          "fullscreen": false,
          "resizable": true,
          "title": "My Tauri SvelteKit Three.js App",
          "width": 800,
          "height": 600
        }
      ]
    }
  }